@model Web.Models.TAIKHOAN
@{
    Layout = null;
    var ImagePath = "/wwwoot/dataimg/" + Model.HinhAnh;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Thông tin cá nhân</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon" />
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Areas/Admin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: NiceAdmin - v2.1.0
    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4" style="width:max-content">
                                <a href="#" class="logo d-flex align-items-center w-auto">
                                    <img src="~/Areas/Admin/assets/img/logo.jpg" alt="">
                                    <span class="d-none d-lg-block">Thông tin tài khoản</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3" style="width:150%">

                                <div class="card-body">
                                    @using (Html.BeginForm("SuaTT", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.ID_TK)
                                        @Html.HiddenFor(model => model.HinhAnh)
                                        @Html.HiddenFor(model => model.HoTen)
                                        <div class="pt-4 pb-2">
                                            <h5 class="card-title text-center pb-0 fs-4">@Model.HoTen</h5>
                                        </div>
                                        <div class="form-horizontal">
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group" style="margin-left:15%">
                                                Tên đăng nhập
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Mật khẩu
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Ngày sinh
                                                <div class="col-md-10">
                                                    <input name="NgaySinh" type="date" value="@Model.NgaySinh.Value.ToString("yyyy-MM-dd")" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Giới tính
                                                <div class="col-md-10">
                                                    <select name="GioiTinh" class="form-control">
                                                        <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
                                                        <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Điện thoại
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Email
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Địa chỉ
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left:15%">
                                                Hình ảnh
                                                <div class="col-md-10">
                                                    <img id="output" class="img-rounded" atl="Ảnh" width="180" height="200" src="@ImagePath" />
                                                    <p><label for="ufile" style="cursor: pointer;">Chọn file ảnh</label></p>
                                                    <input name="ImageFile" id="ufile" type="file" style="display: none;" onchange="loadFile(event)" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Lưu" class="btn btn-default" style="background-color:#0D6EFD;margin-left:50%" />
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Areas/Admin/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/Areas/Admin/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Areas/Admin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Areas/Admin/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/echarts/echarts.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Areas/Admin/assets/js/main.js"></script>

</body>

</html>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>