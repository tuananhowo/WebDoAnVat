@using Web.Models
@{
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    var list = ViewData["hinhanh"] as List<Banner>;
}
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>DANH MỤC</span>
                    </div>
                    <ul>
                        @{
                            Html.RenderAction("ListDanhMuc", "Home");
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">

                    <div class="hero__search__form" style="display:flex;align-items:center">
                        @using (Html.BeginForm("Index", "Home", new { @class = "search" }))
                        {
                            <input type="text" placeholder="Bạn cần tìm gì ?" name="keysearch" style="width:100%">
                            <button type="submit" class="site-btn">Tìm kiếm</button>
                        }
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>012345678</h5>
                            <span>Hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>
                @{
                    //Lấy đường dẫn file ảnh
                    string ImagePath = "/wwwoot/dataimg/" + Session["Banner1"];
                    string ImagePath1 = "/wwwoot/dataimg/" + Session["Banner2"];
                    string ImagePath2 = "/wwwoot/dataimg/" + Session["Banner3"];
                }
                    <div class="w3-content w3-section" style="max-width:900px;max-height:550px !important">
                        @foreach (var item in list)
                        {
                            <img class="mySlides w3-animate-fading" src="/wwwoot/dataimg/@item.LinkBanner" style="width:100%;max-height:400px;">
                        }
                    </div>
                </div>           
        </div>
    </div>
</section>
<!--Show list danh mục-->
@{
    Html.RenderAction("ShowListDanhMuc", "Home");
}
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>SẢN PHẨM NỔI BẬT</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @{
                Html.RenderAction("AllSanPham", "Home");
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>DANH SÁCH SẢN PHẨM</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="@ImagePath1" alt="" style="width:100%; height:300px;">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="@ImagePath2" alt="" style="width:100%; height:300px;">
                </div>
            </div>
        </div>
    </div>
</div>
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>CẬP NHẬT THÔNG TIN CỬA HÀNG</h2>
                </div>
            </div>
        </div>
    </div>
</section>
@if (Request["sc"] == "1")
{
    <script>alert("Đặt hàng thành công!");</script>
}

<script>
    var myIndex = 0;
    carousel();
    function carousel() {
        var i;
        var x = document.getElementsByClassName("mySlides");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        myIndex++;
        if (myIndex > x.length) { myIndex = 1 }
        x[myIndex - 1].style.display = "block";
        setTimeout(carousel, 5000);
    }
</script>