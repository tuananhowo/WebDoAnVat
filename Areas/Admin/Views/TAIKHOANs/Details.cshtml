@model Web.Models.TAIKHOAN

@{
    ViewBag.Title = "Details";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Chi tiết tài khoản</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active">Chi tiết tài khoản</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên đăng nhập
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenDangNhap)
                </dd>

                <dt>
                    Mật khẩu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>

                <dt>
                    Họ tên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HoTen)
                </dd>

                <dt>
                    Email
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt>
                    Số điện thoại
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SDT)
                </dd>
                <dt>
                    Ngày sinh
                </dt>

                <dd>
                    @Model.NgaySinh.Value.ToString("dd-MM-yyyy")
                </dd>

                <dt>
                    Giới tính
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GioiTinh)
                </dd>

                <dt>
                    Địa chỉ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DiaChi)
                </dd>

                <dt>
                    Tình trạng
                </dt>

                <dd>
                    @if (Model.TinhTrang == 1)
                    {
                        <p>Hoạt động</p>
                    }
                    @if (Model.TinhTrang == 2)
                    {
                        <p>Không hoạt động</p>
                    }
                </dd>

                <dt>
                    Phân quyền
                </dt>

                <dd>
                    @if (Model.PhanQuyen == 1)
                    {
                        <p>Admin</p>
                    }
                    @if (Model.PhanQuyen == 2)
                    {
                        <p>Nhân viên</p>
                    }
                    @if (Model.PhanQuyen == 3)
                    {
                        <p>Khách hàng</p>
                    }
                </dd>

                <dt>
                    Ngày tạo
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NgayTao)
                </dd>

                <dt>
                    Hình ảnh
                </dt>

                <dd>
                    @{
                        string ImagePath = "~/wwwoot/dataimg/" + Model.HinhAnh;
                    }
                    <img src="@Url.Content(ImagePath)" width="200" class="img-thumbnail" />
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Cập nhật", "Edit", new { id = Model.ID_TK }) |
            @Html.ActionLink("Quay lại", "Index")
        </p>
    </section>
</main>