<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Food</title>
    <link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon" />
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <script src="~/Content/jquery-3.6.1.min.js"></script>
    <link href="~/Areas/Admin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->

    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet">


</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="#" class="logo d-flex align-items-center">
                <img src="assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">Quản trị hệ thống</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <div class="search-form">

                

            </div>
        </div><!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->
                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        @if (Session["HoTenAdmin"] != null)
                        {

                            <img src="~/wwwoot/dataimg/@Session["HinhAnhAdmin"]" alt="Profile" class="rounded-circle" style="width:25px;height:25px">
                            <span class="d-none d-md-block dropdown-toggle ps-2">@Session["HoTenAdmin"]</span>
                        }
                        else
                        {
                            <span class="d-none d-md-block dropdown-toggle ps-2">Đăng nhập</span>
                        }
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li>
                            <a href="/Admin/DANHMUCs/Thongtin/@Session["ID_TKAdmin"]">Thông tin cá nhân</a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Logout","Home")" />
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Đăng xuất</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <h3>Chức năng</h3>
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index","Home")">
                    <i class="bi bi-house-fill"></i>
                    <span>Trang chủ</span>
                </a>
                <a class="nav-link collapsed" href="@Url.Action("Index","DANHMUCS")">
                    <i class="bi bi-briefcase-fill"></i>
                    <span>Danh mục</span>
                </a>
                <a class="nav-link collapsed" href="@Url.Action("Index","Banner")">
                    <i class="bi bi-image"></i>
                    <span>Banner</span>
                </a>
                <a class="nav-link collapsed" href="@Url.Action("Index","SANPHAMS")">
                    <i class="bi bi-clipboard-check"></i>
                    <span>Sản phẩm</span>
                </a>
                @{ var sessPQ = (int?)Session["PQAdmin"] ?? 0; }
                @if (sessPQ == 1)
                {
                    <a class="nav-link collapsed" href="@Url.Action("Index","TAIKHOANS")">
                        <i class="bi bi-people-fill"></i>
                        <span>Tài khoản</span>
                    </a>
                }

                <a class="nav-link collapsed" href="@Url.Action("Index","GIOHANGS")">
                    <i class="bi bi-cart3"></i>
                    <span>Đơn hàng</span>
                </a>
                <a class="nav-link collapsed" href="@Url.Action("Index","ThongKe")">
                    <i class="bi bi-cart3"></i>
                    <span>Thống kê</span>
                </a>
            </li>

        </ul>

    </aside>

    @RenderBody()
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; <strong><span>Food</span></strong>
        </div>
        <div class="credits">
            <!-- All the links in the footer should remain intact. -->
            <!-- You can delete the links only if you purchased the pro version. -->
            <!-- Licensing information: https://bootstrapmade.com/license/ -->
            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->

        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Areas/Admin/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/Areas/Admin/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Areas/Admin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Areas/Admin/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/echarts/echarts.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Areas/Admin/assets/js/main.js"></script>

</body>

</html>


